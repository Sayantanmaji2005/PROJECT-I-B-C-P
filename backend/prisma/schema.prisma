generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  BRAND
  INFLUENCER
  ADMIN
}

enum CampaignStatus {
  OPEN
  PAUSED
  CLOSED
}

enum MatchStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ProposalStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
  WITHDRAWN
}

enum TransactionStatus {
  HELD
  RELEASED
  REFUNDED
}

model User {
  id                   Int            @id @default(autoincrement())
  name                 String
  email                String         @unique
  passwordHash         String
  role                 Role
  niche                String?
  followers            Int?
  engagementRate       Float?
  portfolioUrl         String?
  socialLinks          Json?
  followerQualityScore Float?
  isFraudFlagged       Boolean        @default(false)
  profileViews         Int            @default(0)
  campaigns            Campaign[]     @relation("BrandCampaigns")
  matches              Match[]        @relation("InfluencerMatches")
  applications         Application[]  @relation("InfluencerApplications")
  transactions         Transaction[]  @relation("InfluencerTransactions")
  mediaAssets          MediaAsset[]
  refreshTokens        RefreshToken[]
  auditLogs            AuditLog[]     @relation("ActorAuditLogs")
  createdAt            DateTime       @default(now())
}

model Campaign {
  id             Int            @id @default(autoincrement())
  brandId        Int
  title          String
  budget         Int
  description    String
  targetAudience String?
  targetNiche    String?
  startDate      DateTime?
  endDate        DateTime?
  deliverables   String?
  objective      String?
  status         CampaignStatus @default(OPEN)
  brand          User           @relation("BrandCampaigns", fields: [brandId], references: [id])
  matches        Match[]
  applications   Application[]
  transactions   Transaction[]
  mediaAssets    MediaAsset[]
  createdAt      DateTime       @default(now())
}

model Match {
  id           Int         @id @default(autoincrement())
  campaignId   Int
  influencerId Int
  status       MatchStatus @default(PENDING)
  campaign     Campaign    @relation(fields: [campaignId], references: [id])
  influencer   User        @relation("InfluencerMatches", fields: [influencerId], references: [id])
  proposals    Proposal[]
  createdAt    DateTime    @default(now())

  @@unique([campaignId, influencerId])
}

model Proposal {
  id           Int            @id @default(autoincrement())
  matchId      Int
  deliverables String
  amount       Int
  status       ProposalStatus @default(DRAFT)
  match        Match          @relation(fields: [matchId], references: [id])
  transactions Transaction[]
  createdAt    DateTime       @default(now())
}

model Application {
  id              Int               @id @default(autoincrement())
  campaignId      Int
  influencerId    Int
  proposalMessage String            @default("")
  status          ApplicationStatus @default(PENDING)
  campaign        Campaign          @relation(fields: [campaignId], references: [id])
  influencer      User              @relation("InfluencerApplications", fields: [influencerId], references: [id])
  createdAt       DateTime          @default(now())

  @@unique([campaignId, influencerId])
}

model Transaction {
  id           Int               @id @default(autoincrement())
  campaignId   Int
  influencerId Int
  proposalId   Int?
  amount       Int
  status       TransactionStatus @default(HELD)
  releasedAt   DateTime?
  campaign     Campaign          @relation(fields: [campaignId], references: [id])
  influencer   User              @relation("InfluencerTransactions", fields: [influencerId], references: [id])
  proposal     Proposal?         @relation(fields: [proposalId], references: [id])
  createdAt    DateTime          @default(now())

  @@index([campaignId])
  @@index([influencerId])
}

model RefreshToken {
  id              Int       @id @default(autoincrement())
  tokenHash       String    @unique
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  expiresAt       DateTime
  revokedAt       DateTime?
  replacedByToken Int?
  createdAt       DateTime  @default(now())

  @@index([userId])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  actorId    Int?
  actor      User?    @relation("ActorAuditLogs", fields: [actorId], references: [id])
  action     String
  entityType String
  entityId   String?
  metadata   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([actorId])
  @@index([entityType])
  @@index([createdAt])
}

model MediaAsset {
  id           Int       @id @default(autoincrement())
  userId       Int
  campaignId   Int?
  url          String
  publicId     String
  resourceType String
  user         User      @relation(fields: [userId], references: [id])
  campaign     Campaign? @relation(fields: [campaignId], references: [id])
  createdAt    DateTime  @default(now())

  @@index([userId])
  @@index([campaignId])
}
